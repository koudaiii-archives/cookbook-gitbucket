{
  "name": "base",
  "chef_type" : "role",
  "json_class" : "Chef::Role",
  "tz": "Asia/Tokyo",
  "override_attributes": {
    "my_jetty" : {
      "download_url" : "http://download.eclipse.org/jetty/stable-9/dist/jetty-distribution-9.2.6.v20141205.tar.gz",
      "host": "127.0.0.1",
      "java_options": "",
      "home": "/opt/jetty"
    },
    "java" : {
      "install_flavor" : "oracle",
      "jdk_version" : "7",
      "oracle" : {
        "accept_oracle_download_terms" : true
      }
    }
  },
  "run_list": [
    "recipe[my_timezone]",
    "recipe[my_ntp]",
    "recipe[my_postfix]",
    "recipe[java]",
    "recipe[my_jetty]"
  ]
}
